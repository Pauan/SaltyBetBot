{
  "manifest_version": 2,
  "name": "Salty Bet Bot",
  "description": "This extension automatically bets on saltybet.com",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "downloads"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "*://saltybet.com/",
      "*://www.saltybet.com/",
      "*://mugen.saltybet.com/",
      "*://live.saltybet.com/"
    ],
    "js": [
      "saltybet.js"
    ],
    "run_at": "document_start",
    "all_frames": false
  }, {
    "matches": [
      "*://*.twitch.tv/embed/saltybet/chat*"
    ],
    "js": [
      "twitch_chat.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'",
  "web_accessible_resources": [
    "js/*.js",
    "js/*.wasm",
    "icons/*.svg"
  ]
}
